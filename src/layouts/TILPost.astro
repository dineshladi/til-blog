---
import Layout from './Layout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'til'>;
}

const { post } = Astro.props;
const { title, date, tags } = post.data;
---

<Layout title={title}>
  <article class="til-post">
    <header>
      <h1>{title}</h1>
      <div class="meta">
        <time datetime={date.toISOString()}>
          {date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        {tags && tags.length > 0 && (
          <span class="tags">
            {tags.map((tag: string) => (
              <a href={`/til-blog/tags/${tag}`} class="tag">#{tag}</a>
            ))}
          </span>
        )}
      </div>
    </header>
    <div class="content">
      <slot />
    </div>
  </article>
</Layout>
