---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Dinesh Ladi TIL - A collection of things I\'ve learned' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" />
  </head>
  <body>
    <header class="site-header">
      <nav>
        <a href="/til-blog/" class="logo">TIL</a>
        <div class="nav-links">
          <a href="/til-blog/">Home</a>
          <a href="/til-blog/tags">Tags</a>
          <a href="/til-blog/feed.xml">Feed</a>
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <p>Built with <a href="https://astro.build">Astro</a> â€¢ Inspired by <a href="https://til.simonwillison.net/">Simon Willison</a></p>
    </footer>
  </body>
</html>
